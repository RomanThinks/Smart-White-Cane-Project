<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MoreMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="@dimen/cardview_compat_inset_shadow"
    tools:context=".MoreActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:contentDescription="@null"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/base" />

    <Button
        android:visibility="gone"
        android:id="@+id/homebuttonMoActv"
        android:layout_width="90dp"
        android:layout_height="38dp"
        android:backgroundTint="@color/teal_700"
        android:text="HOME"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023"
        tools:ignore="DuplicateIds" />

    <Button
        android:id="@+id/backbuttonMoActv"
        android:layout_width="101dp"
        android:layout_height="39dp"
        android:backgroundTint="@color/teal_700"
        android:text="Back"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.903" />

    <TextView
        android:layout_width="380dp"
        android:layout_height="480dp"
        android:background="@color/teal_700"
        tools:layout_editor_absoluteX="15dp"
        tools:layout_editor_absoluteY="207dp" />

    <TextView
        android:layout_width="351sp"
        android:layout_height="435sp"
        android:background="@color/teal_200"
        android:padding="10sp"
        android:text="    Smart White Cane Project\n\nDeveloped by Team Saber:\n
        Roman Rodriguez,\n
        Arturo Verdugo,\n
        Joshua DeLosSantos\n\nIntended as a Final Project for CSE 5408.\nInstructed in California State University by Dr. Fadi Muheidat\n\nTo be presented on 5/10/2021"
        android:textColor="@color/white"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="30sp"
        tools:layout_editor_absoluteY="236sp" />


</androidx.constraintlayout.widget.ConstraintLayout>